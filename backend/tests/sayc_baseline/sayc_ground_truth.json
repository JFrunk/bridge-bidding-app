  "opening_rules": {
    "1NT": {
      "points": [15, 17],
      "shape": "balanced",
      "notes": "No 5-card major typically, but some allow with weak major"
    },
    "2NT": {
      "points": [20, 21],
      "shape": "balanced"
    },
    "3NT": {
      "points": [25, 27],
      "shape": "balanced",
      "notes": "Gambling 3NT is alternative with solid 7-card minor"
    },
    "1H_1S": {
      "points": [13, 21],
      "suit_length": 5,
      "notes": "5-card major requirement in SAYC"
    },
    "1C": {
      "points": [13, 21],
      "suit_length": 3,
      "notes": "Open 1C with 3-3 in minors"
    },
    "1D": {
      "points": [13, 21],
      "suit_length": 3,
      "notes": "Open 1D with 4-4 in minors or 4-4-3-2 shape"
    },
    "2C": {
      "points": [22, 100],
      "forcing": "game",
      "notes": "Strong, artificial, game-forcing"
    }
  },

  "minor_suit_tiebreakers": {
