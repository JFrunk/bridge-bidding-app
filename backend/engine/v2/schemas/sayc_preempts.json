    {
      "id": "respond_3nt_to_partner_preempt",
      "bid": "3NT",
      "priority": 450,
      "description": "3NT response to partner's preempt with stoppers",
      "conditions": {
        "partner_last_bid": {
          "in": ["3♣", "3♦", "3♥", "3♠"]
        },
        "hcp": {
          "min": 16
        },
        "stopper_count": {
          "min": 3
        }
      },
      "forcing": "none",
      "explanation": "3NT: Game facing partner's preempt with {hcp} HCP and stoppers",
      "sets_forcing_level": "NON_FORCING"
    },
    {
      "id": "raise_partner_preempt_to_game",
      "bid": "4♥",
      "priority": 340,
      "description": "Raise partner's heart preempt to game",
      "conditions": {
        "partner_preempted": true,
        "partner_suit": "♥",
        "OR": [
          {
            "hcp": {"min": 14},
            "support_for_partner": {"min": 3}
          },
          {
            "hcp": {"min": 10},
            "support_for_partner": {"min": 4},
            "is_contested": false
          }
        ]
      },
      "forcing": "none",
      "explanation": "Game raise with {hcp} HCP and support",
      "sets_forcing_level": "NON_FORCING"
    },
