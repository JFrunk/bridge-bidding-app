    {
      "id": "respond_3nt_to_partner_preempt",
      "bid": "3NT",
      "priority": 450,
      "description": "3NT response to partner's preempt with stoppers",
      "conditions": {
        "partner_last_bid": {
          "in": ["3♣", "3♦", "3♥", "3♠"]
        },
        "hcp": {
          "min": 14
        },
        "stopper_count": {
          "min": 2
        }
      },
      "forcing": "none",
      "explanation": "3NT: Game with outside stoppers facing partner's preempt",
      "sets_forcing_level": "NON_FORCING"
    },
    {
      "id": "raise_partner_preempt_to_game",
      "bid": "4♥",
      "priority": 440,
      "description": "Raise partner's heart preempt to game",
      "conditions": {
        "partner_last_bid": {
          "in": ["2♥", "3♥"]
        },
        "hcp": {
          "min": 14
        },
        "hearts_length": {
          "min": 3
