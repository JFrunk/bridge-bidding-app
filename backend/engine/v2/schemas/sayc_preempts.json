      "conditions": {
        "partner_last_bid": {
          "in": ["2♦", "2♥", "2♠"]
        },
        "hcp": {
          "min": 15
        }
      },
      "forcing": "one_round",
      "explanation": "2NT: Feature ask - asking partner to show an outside feature",
      "sets_forcing_level": "FORCING_1_ROUND"
    },
    {
      "id": "new_suit_over_preempt",
      "bid": "3♠",
      "priority": 460,
      "description": "New suit forcing over partner's preempt",
      "conditions": {
        "partner_last_bid": {
          "in": ["3♣", "3♦", "3♥"]
        },
        "hcp": {
          "min": 16
        },
        "spades_length": {
          "min": 5
        }
      },
      "forcing": "one_round",
      "explanation": "New suit: Forcing, showing own suit with game interest",
      "sets_forcing_level": "FORCING_1_ROUND"
    },
    {
      "id": "pass_over_partner_preempt_weak",
      "bid": "Pass",
      "priority": 100,
      "description": "Pass partner's preempt with weak hand",
      "conditions": {
        "partner_last_bid": {
          "in": ["2♦", "2♥", "2♠", "3♣", "3♦", "3♥", "3♠"]
        },
        "hcp": {
          "max": 12
        }
      },
      "forcing": "none",
      "explanation": "Pass: Not enough to act over partner's preempt",
      "sets_forcing_level": "NON_FORCING"
    },
    {
      "id": "gambling_3nt",
      "bid": "3NT",
      "priority": 185,
      "description": "Gambling 3NT - solid 7+ minor with no outside stoppers",
      "conditions": {
        "is_opening": true,
        "is_solid_minor": true,
        "outside_stopper_count": {
          "max": 0
        }
      },
      "forcing": "none",
      "explanation": "Gambling 3NT: Solid 7+ card minor (AKQxxxx+), no outside A or K",
