      "id": "weak_2_diamonds",
      "bid": "2♦",
      "priority": 180,
      "description": "Weak 2♦ opening",
      "conditions": {
        "is_opening": true,
        "hcp": {
          "min": 6,
          "max": 10
        },
        "diamonds_length": {
          "min": 6
        },
        "diamonds_hcp": {
          "min": 7,
          "max": 9
        },
        "suit_quality_diamonds": {
          "min": "excellent"
        },
        "spades_length": {
          "max": 3
        },
        "hearts_length": {
          "max": 3
        }
      },
      "forcing": "none",
      "explanation": "Weak 2♦: Excellent 6-card suit (2+ top honors, 7+ HCP in suit), 6-10 total HCP, no 4-card major",
      "sets_forcing_level": "NON_FORCING"
    },
