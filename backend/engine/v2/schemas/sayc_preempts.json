    {
      "id": "feature_ask_2nt_over_weak_2",
      "bid": "2NT",
      "priority": 500,
      "description": "Feature ask over partner's weak 2",
      "conditions": {
        "partner_last_bid": {
          "in": ["2♦", "2♥", "2♠"]
        },
        "hcp": {
          "min": 15
        }
      },
      "forcing": "one_round",
      "explanation": "2NT: Feature ask - asking partner to show an outside feature",
      "sets_forcing_level": "FORCING_1_ROUND"
    },
    {
      "id": "new_suit_over_preempt",
      "bid": "3♠",
      "priority": 460,
