{
  "schema_version": "1.0",
  "system": "SAYC",
  "category": "balancing",
  "description": "Balancing (pass-out) seat actions",

  "rules": [
    {
      "id": "balancing_double",
      "bid": "X",
      "priority": 100,
      "description": "Balancing takeout double",
      "conditions": {
        "is_overcall": true,
        "is_balancing": true,
        "opening_bid": {"in": ["1♣", "1♦", "1♥", "1♠"]},
        "hcp": {"min": 9, "max": 14},
        "unbid_suit_support": {"min": 3}
      },
      "forcing": "one_round",
      "explanation": "Balancing double (about 3 HCP less than direct)"
    },
    {
      "id": "balancing_double_strong",
      "bid": "X",
      "priority": 99,
      "description": "Strong balancing double",
      "conditions": {
        "is_overcall": true,
        "is_balancing": true,
        "opening_bid": {"in": ["1♣", "1♦", "1♥", "1♠"]},
        "hcp": {"min": 15}
      },
      "forcing": "one_round",
      "explanation": "Strong balancing double with {hcp} HCP"
    },
    {
      "id": "balancing_double_flexible",
      "bid": "X",
      "priority": 98,
      "description": "Balancing double with imperfect shape",
      "conditions": {
        "is_overcall": true,
        "is_balancing": true,
        "opening_bid": {"in": ["1♣", "1♦", "1♥", "1♠"]},
        "hcp": {"min": 9, "max": 14},
        "unbid_suit_support": {"min": 2}
      },
      "forcing": "one_round",
      "explanation": "Balancing double with {hcp} HCP (flexible shape)"
    },
    {
      "id": "balancing_1nt",
      "bid": "1NT",
      "priority": 95,
      "description": "Balancing 1NT",
      "conditions": {
        "is_overcall": true,
        "is_balancing": true,
        "opening_bid": {"in": ["1♣", "1♦", "1♥", "1♠"]},
        "hcp": {"min": 11, "max": 14},
        "is_balanced": true,
        "stopper_in_opponent_suit": true
      },
      "forcing": "none",
      "explanation": "Balancing 1NT showing {hcp} HCP with stopper"
    },
    {
      "id": "balancing_suit_1_level",
      "bid": "1{longest_suit}",
      "priority": 90,
      "description": "Balancing 1-level suit bid",
      "conditions": {
        "is_overcall": true,
        "is_balancing": true,
        "opening_bid": {"in": ["1♣", "1♦"]},
        "hcp": {"min": 5, "max": 14},
        "longest_suit_length": {"min": 5}
      },
      "forcing": "none",
      "explanation": "Balancing bid in {longest_suit} with {hcp} HCP"
    },
    {
      "id": "balancing_suit_2_level",
      "bid": "2{longest_suit}",
      "priority": 85,
      "description": "Balancing 2-level suit bid",
      "conditions": {
        "is_overcall": true,
        "is_balancing": true,
        "hcp": {"min": 8, "max": 14},
        "longest_suit_length": {"min": 5},
        "suit_quality_longest": {"min": "fair"}
      },
      "forcing": "none",
      "explanation": "Balancing 2-level bid with {hcp} HCP"
    },
    {
      "id": "balancing_cuebid",
      "bid": "{opponent_suit}",
      "priority": 80,
      "description": "Balancing cuebid (Michaels)",
      "conditions": {
        "is_overcall": true,
        "is_balancing": true,
        "opening_bid": {"in": ["1♥", "1♠"]},
        "hcp": {"min": 6, "max": 14},
        "other_major_length": {"min": 5},
        "any_minor_length": {"min": 5}
      },
      "forcing": "one_round",
      "explanation": "Balancing Michaels showing two suits"
    },
    {
      "id": "advancer_jump_after_balancing_double",
      "bid": "3{suit}",
      "priority": 75,
      "description": "Jump response to balancing double",
      "conditions": {
        "partner_last_bid": "X",
        "is_balancing": false,
        "partner_balancing": true,
        "hcp": {"min": 10, "max": 12},
        "suit_length": {"min": 5}
      },
      "forcing": "none",
      "explanation": "Jump showing {hcp} HCP (partner may have only 9)"
    },
    {
      "id": "advancer_respond_to_balancing_double",
      "bid": "2{suit}",
      "priority": 70,
      "description": "Simple response to balancing double",
      "conditions": {
        "partner_last_bid": "X",
        "is_balancing": false,
        "hcp": {"min": 6, "max": 10},
        "suit_length": {"min": 4}
      },
      "forcing": "none",
      "suit_selection": "longest_unbid",
      "explanation": "Respond to partner's balancing double"
    },
    {
      "id": "advancer_nt_after_balancing_double",
      "bid": "2NT",
      "priority": 65,
      "description": "2NT response to balancing double",
      "conditions": {
        "partner_last_bid": "X",
        "hcp": {"min": 10, "max": 12},
        "is_balanced": true,
        "stopper_in_opponent_suit": true
      },
      "forcing": "none",
      "explanation": "2NT showing {hcp} HCP balanced with stopper"
    },
    {
      "id": "pass_balancing",
      "bid": "Pass",
      "priority": 1,
      "description": "Pass in balancing seat with nothing to say",
      "conditions": {
        "is_overcall": true,
        "is_balancing": true,
        "OR": [
          {"hcp": {"max": 4}},
          {
            "hcp": {"max": 8},
            "longest_suit_length": {"max": 4}
          }
        ]
      },
      "forcing": "none",
      "explanation": "Pass without suitable hand for balancing action"
    }
  ]
}
