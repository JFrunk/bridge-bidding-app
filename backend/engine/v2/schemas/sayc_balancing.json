{
  "schema_version": "1.0",
  "system": "SAYC",
  "category": "balancing",
  "description": "Balancing (pass-out) seat actions - 'Borrowed King' principle: bid with ~3 HCP less than direct seat",
  "rules": [
    {
      "id": "balancing_double",
      "bid": "X",
      "priority": 700,
      "description": "Balancing takeout double (Borrowed King: 9+ instead of 12+)",
      "constraints": [
        {"feature": "is_overcall", "expected": true, "constraint_type": "HARD"},
        {"feature": "is_balancing", "expected": true, "constraint_type": "HARD"},
        {"feature": "hcp", "min": 8, "max": 14, "constraint_type": "SOFT", "penalty_per_unit": 0.1},
        {"feature": "short_in_opponent_suit", "expected": true, "constraint_type": "SOFT", "penalty_per_unit": 0.2},
        {"feature": "has_4_card_major", "expected": true, "constraint_type": "SOFT", "penalty_per_unit": 0.2}
      ],
      "forcing": "one_round",
      "explanation": "Balancing takeout double (8-14 HCP, Borrowed King principle)",
      "sets_forcing_level": "FORCING_1_ROUND"
    },
    {
      "id": "balancing_double_strong",
      "bid": "X",
      "priority": 750,
      "description": "Strong balancing double (15+ HCP - too strong for suit overcall)",
      "constraints": [
        {"feature": "is_overcall", "expected": true, "constraint_type": "HARD"},
        {"feature": "is_balancing", "expected": true, "constraint_type": "HARD"},
        {"feature": "hcp", "min": 15, "constraint_type": "HARD"}
      ],
      "forcing": "one_round",
      "explanation": "Strong balancing double (15+ HCP, too strong for simple overcall)",
      "sets_forcing_level": "FORCING_1_ROUND"
    },
    {
      "id": "balancing_double_flexible",
      "bid": "X",
      "priority": 88,
      "description": "Balancing double with imperfect shape (Borrowed King)",
      "conditions": {
        "is_overcall": true,
        "is_balancing": true,
        "opening_bid": {
          "in": [
            "1\u2663",
            "1\u2666",
            "1\u2665",
            "1\u2660"
          ]
        },
        "hcp": {
          "min": 9,
          "max": 14
        },
        "unbid_suit_support": {
          "min": 2
        }
      },
      "forcing": "one_round",
      "explanation": "Balancing double (9-14 HCP, flexible shape, Borrowed King principle)",
      "sets_forcing_level": "FORCING_1_ROUND"
    },
    {
      "id": "balancing_1nt",
      "bid": "1NT",
      "priority": 680,
      "description": "Balancing 1NT (Borrowed King: 11-14 instead of 15-18)",
      "constraints": [
        {"feature": "is_overcall", "expected": true, "constraint_type": "HARD"},
        {"feature": "is_balancing", "expected": true, "constraint_type": "HARD"},
        {"feature": "hcp", "min": 11, "max": 14, "constraint_type": "SOFT", "penalty_per_unit": 0.1},
        {"feature": "is_balanced", "expected": true, "constraint_type": "HARD"},
        {"feature": "stopper_in_opponent_suit", "expected": true, "constraint_type": "HARD"}
      ],
      "forcing": "none",
      "explanation": "Balancing 1NT (11-14 HCP, balanced with stopper, Borrowed King principle)",
      "sets_forcing_level": "NON_FORCING"
    },
    {
      "id": "balancing_suit_1_level",
      "bid": "1{longest_suit}",
      "priority": 660,
      "description": "Balancing 1-level suit bid (8-14 HCP, stronger hands double)",
      "constraints": [
        {"feature": "is_overcall", "expected": true, "constraint_type": "HARD"},
        {"feature": "is_balancing", "expected": true, "constraint_type": "HARD"},
        {"feature": "hcp", "min": 8, "max": 14, "constraint_type": "HARD"},
        {"feature": "longest_suit_length", "min": 5, "constraint_type": "HARD"}
      ],
      "forcing": "none",
      "explanation": "Balancing 1-level overcall (8-14 HCP, 5+ card suit)",
      "sets_forcing_level": "NON_FORCING"
    },
    {
      "id": "balancing_suit_2_level",
      "bid": "2{longest_suit}",
      "priority": 640,
      "description": "Balancing 2-level suit bid - with 5+ card suit prefer bidding over doubling",
      "constraints": [
        {"feature": "is_overcall", "expected": true, "constraint_type": "HARD"},
        {"feature": "is_balancing", "expected": true, "constraint_type": "HARD"},
        {"feature": "hcp", "min": 6, "max": 14, "constraint_type": "SOFT", "penalty_per_unit": 0.1},
        {"feature": "longest_suit_length", "min": 5, "constraint_type": "HARD"}
      ],
      "forcing": "none",
      "explanation": "Balancing 2-level overcall (6-14 HCP, 5+ card suit, Borrowed King principle)",
      "sets_forcing_level": "NON_FORCING"
    },
    {
      "id": "balancing_suit_2_level_long",
      "bid": "2{longest_suit}",
      "priority": 650,
      "description": "Balancing 2-level with long suit (6+) - Borrowed King allows light bids",
      "constraints": [
        {"feature": "is_overcall", "expected": true, "constraint_type": "HARD"},
        {"feature": "is_balancing", "expected": true, "constraint_type": "HARD"},
        {"feature": "hcp", "min": 6, "max": 14, "constraint_type": "SOFT", "penalty_per_unit": 0.1},
        {"feature": "longest_suit_length", "min": 6, "constraint_type": "HARD"}
      ],
      "forcing": "none",
      "explanation": "Balancing 2-level overcall (6-14 HCP, 6+ card suit, Borrowed King principle)",
      "sets_forcing_level": "NON_FORCING"
    },
    {
      "id": "balancing_cuebid",
      "bid": "{opponent_suit}",
      "priority": 600,
      "description": "Balancing cuebid (Michaels)",
      "conditions": {
        "is_overcall": true,
        "is_balancing": true,
        "opening_bid": {
          "in": [
            "1\u2665",
            "1\u2660"
          ]
        },
        "hcp": {
          "min": 6,
          "max": 14
        },
        "other_major_length": {
          "min": 5
        },
        "any_minor_length": {
          "min": 5
        }
      },
      "forcing": "one_round",
      "explanation": "Balancing Michaels showing two suits",
      "sets_forcing_level": "FORCING_1_ROUND"
    },
    {
      "id": "advancer_jump_after_balancing_double",
      "bid": "3{suit}",
      "priority": 85,
      "description": "Jump response to balancing double",
      "conditions": {
        "partner_last_bid": "X",
        "is_balancing": false,
        "partner_balancing": true,
        "hcp": {
          "min": 11,
          "max": 13
        },
        "suit_length": {
          "min": 5
        },
        "suit_quality_longest": {
          "min": "good"
        }
      },
      "forcing": "none",
      "explanation": "Jump response to balancing double (11-13 HCP, 5+ card suit - extra values since partner may be light)",
      "sets_forcing_level": "NON_FORCING"
    },
    {
      "id": "advancer_respond_to_balancing_double",
      "bid": "2{suit}",
      "priority": 80,
      "description": "Simple response to balancing double - needs extra values since partner may be light (8-14 HCP)",
      "conditions": {
        "partner_last_bid": "X",
        "is_balancing": false,
        "hcp": {
          "min": 10,
          "max": 12
        },
        "suit_length": {
          "min": 4
        },
        "partnership_hcp_min": {
          "min": 18
        }
      },
      "forcing": "none",
      "suit_selection": "longest_unbid",
      "explanation": "Simple response to balancing double (10-12 HCP, 4+ card suit - conservative since partner may be light)",
      "sets_forcing_level": "NON_FORCING"
    },
    {
      "id": "advancer_nt_after_balancing_double",
      "bid": "2NT",
      "priority": 85,
      "description": "2NT response to balancing double - need extra values since partner may be light",
      "conditions": {
        "partner_last_bid": "X",
        "partner_balancing": true,
        "hcp": {
          "min": 11,
          "max": 12
        },
        "is_balanced": true,
        "stopper_in_opponent_suit": true,
        "partnership_hcp_min": {
          "min": 22
        }
      },
      "forcing": "none",
      "explanation": "2NT response to balancing double (11-12 HCP, balanced with stopper - conservative since partner may be light)",
      "sets_forcing_level": "NON_FORCING"
    },
    {
      "id": "pass_balancing_weak",
      "bid": "Pass",
      "priority": 500,
      "description": "Pass in balancing seat with weak hand",
      "constraints": [
        {"feature": "is_overcall", "expected": true, "constraint_type": "HARD"},
        {"feature": "is_balancing", "expected": true, "constraint_type": "HARD"},
        {"feature": "hcp", "max": 5, "constraint_type": "SOFT", "penalty_per_unit": 0.15}
      ],
      "forcing": "none",
      "explanation": "Pass (0-5 HCP, too weak to balance)",
      "sets_forcing_level": "NON_FORCING"
    },
    {
      "id": "pass_balancing_no_shape",
      "bid": "Pass",
      "priority": 490,
      "description": "Pass in balancing seat without suitable shape",
      "constraints": [
        {"feature": "is_overcall", "expected": true, "constraint_type": "HARD"},
        {"feature": "is_balancing", "expected": true, "constraint_type": "HARD"},
        {"feature": "hcp", "min": 5, "max": 7, "constraint_type": "SOFT", "penalty_per_unit": 0.1},
        {"feature": "longest_suit_length", "max": 4, "constraint_type": "HARD"}
      ],
      "forcing": "none",
      "explanation": "Pass (5-7 HCP, unsuitable shape for balancing)",
      "sets_forcing_level": "NON_FORCING"
    },
    {
      "id": "pass_balancing_defensive",
      "bid": "Pass",
      "priority": 480,
      "description": "Pass in balancing seat with defensive values in opponent's suit",
      "constraints": [
        {"feature": "is_overcall", "expected": true, "constraint_type": "HARD"},
        {"feature": "is_balancing", "expected": true, "constraint_type": "HARD"},
        {"feature": "hcp", "min": 8, "max": 10, "constraint_type": "SOFT", "penalty_per_unit": 0.1},
        {"feature": "stopper_in_opponent_suit", "expected": true, "constraint_type": "HARD"}
      ],
      "forcing": "none",
      "explanation": "Pass (8-10 HCP, defensive values in opponent's suit)",
      "sets_forcing_level": "NON_FORCING"
    }
  ]
}