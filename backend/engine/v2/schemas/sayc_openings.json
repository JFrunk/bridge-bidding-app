{
  "schema_version": "1.0",
  "system": "SAYC",
  "category": "openings",
  "description": "Standard American Yellow Card opening bids",

  "rules": [
    {
      "id": "open_2c_strong",
      "bid": "2♣",
      "priority": 100,
      "description": "Strong artificial forcing opening",
      "conditions": {
        "is_opening": true,
        "hcp": {"min": 22},
        "OR": [
          {"quick_tricks": {"min": 4}},
          {"hcp": {"min": 24}}
        ]
      },
      "forcing": "game",
      "explanation": "Strong artificial 2♣ opening showing {hcp} HCP"
    },
    {
      "id": "open_2c_playing_strength",
      "bid": "2♣",
      "priority": 99,
      "description": "Strong 2♣ with playing strength",
      "conditions": {
        "is_opening": true,
        "hcp": {"min": 18, "max": 21},
        "quick_tricks": {"min": 4},
        "losing_trick_count": {"max": 4}
      },
      "forcing": "game",
      "explanation": "Strong 2♣ with {hcp} HCP and {quick_tricks} quick tricks"
    },
    {
      "id": "open_2nt",
      "bid": "2NT",
      "priority": 95,
      "description": "Strong balanced notrump",
      "conditions": {
        "is_opening": true,
        "hcp": {"min": 20, "max": 21},
        "is_balanced": true
      },
      "forcing": "none",
      "explanation": "2NT opening showing {hcp} HCP, balanced"
    },
    {
      "id": "open_1nt",
      "bid": "1NT",
      "priority": 90,
      "description": "Standard 1NT opening",
      "conditions": {
        "is_opening": true,
        "hcp": {"min": 15, "max": 17},
        "is_balanced": true
      },
      "forcing": "none",
      "explanation": "1NT opening showing {hcp} HCP, balanced"
    },
    {
      "id": "open_1_spades",
      "bid": "1♠",
      "priority": 80,
      "description": "One spade opening",
      "conditions": {
        "is_opening": true,
        "hcp": {"min": 12, "max": 21},
        "spades_length": {"min": 5}
      },
      "forcing": "none",
      "explanation": "1♠ opening showing {hcp} HCP and {spades_length}-card spade suit"
    },
    {
      "id": "open_1_hearts",
      "bid": "1♥",
      "priority": 79,
      "description": "One heart opening",
      "conditions": {
        "is_opening": true,
        "hcp": {"min": 12, "max": 21},
        "hearts_length": {"min": 5},
        "OR": [
          {"spades_length": {"max": 4}},
          {"hearts_length": {"min": "spades_length"}}
        ]
      },
      "forcing": "none",
      "explanation": "1♥ opening showing {hcp} HCP and {hearts_length}-card heart suit"
    },
    {
      "id": "open_1_diamonds",
      "bid": "1♦",
      "priority": 70,
      "description": "One diamond opening",
      "conditions": {
        "is_opening": true,
        "hcp": {"min": 12, "max": 21},
        "diamonds_length": {"min": 4},
        "has_5_card_major": false,
        "OR": [
          {"diamonds_length": {"min": "clubs_length"}},
          {"diamonds_length": {"min": 4}, "clubs_length": {"max": 3}}
        ]
      },
      "forcing": "none",
      "explanation": "1♦ opening showing {hcp} HCP and {diamonds_length}-card diamond suit"
    },
    {
      "id": "open_1_clubs",
      "bid": "1♣",
      "priority": 60,
      "description": "One club opening",
      "conditions": {
        "is_opening": true,
        "hcp": {"min": 12, "max": 21},
        "clubs_length": {"min": 3},
        "has_5_card_major": false,
        "diamonds_length": {"max": 3}
      },
      "forcing": "none",
      "explanation": "1♣ opening showing {hcp} HCP and {clubs_length}+ clubs"
    },
    {
      "id": "open_1c_balanced_no_nt",
      "bid": "1♣",
      "priority": 55,
      "description": "Balanced hand outside NT range",
      "conditions": {
        "is_opening": true,
        "hcp": {"min": 12, "max": 14},
        "is_balanced": true,
        "clubs_length": {"min": 3}
      },
      "forcing": "none",
      "explanation": "1♣ opening with balanced {hcp} HCP (too weak for 1NT)"
    },
    {
      "id": "open_1c_strong_balanced",
      "bid": "1♣",
      "priority": 54,
      "description": "Strong balanced hand outside NT range",
      "conditions": {
        "is_opening": true,
        "hcp": {"min": 18, "max": 19},
        "is_balanced": true
      },
      "forcing": "none",
      "explanation": "1♣ opening with balanced {hcp} HCP (too strong for 1NT)"
    },
    {
      "id": "preempt_3_major",
      "bid": "3{longest_suit}",
      "priority": 40,
      "description": "Weak three-bid in major",
      "conditions": {
        "is_opening": true,
        "hcp": {"min": 5, "max": 10},
        "longest_suit": {"in": ["♠", "♥"]},
        "longest_suit_length": {"min": 7},
        "suit_quality_longest": {"min": "fair"}
      },
      "forcing": "none",
      "explanation": "Preemptive 3-bid with {hcp} HCP and 7-card {longest_suit} suit"
    },
    {
      "id": "preempt_3_minor",
      "bid": "3{longest_suit}",
      "priority": 39,
      "description": "Weak three-bid in minor",
      "conditions": {
        "is_opening": true,
        "hcp": {"min": 5, "max": 10},
        "longest_suit": {"in": ["♦", "♣"]},
        "longest_suit_length": {"min": 7},
        "suit_quality_longest": {"min": "fair"}
      },
      "forcing": "none",
      "explanation": "Preemptive 3-bid with {hcp} HCP and 7-card {longest_suit} suit"
    },
    {
      "id": "preempt_2_major",
      "bid": "2{longest_suit}",
      "priority": 35,
      "description": "Weak two-bid in major",
      "conditions": {
        "is_opening": true,
        "hcp": {"min": 5, "max": 10},
        "longest_suit": {"in": ["♠", "♥"]},
        "longest_suit_length": {"exact": 6},
        "suit_quality_longest": {"min": "fair"}
      },
      "forcing": "none",
      "explanation": "Weak 2-bid with {hcp} HCP and 6-card {longest_suit} suit"
    },
    {
      "id": "preempt_2_diamonds",
      "bid": "2♦",
      "priority": 34,
      "description": "Weak two diamonds",
      "conditions": {
        "is_opening": true,
        "hcp": {"min": 5, "max": 10},
        "diamonds_length": {"exact": 6},
        "has_5_card_major": false,
        "suit_quality_diamonds": {"min": "fair"}
      },
      "forcing": "none",
      "explanation": "Weak 2♦ with {hcp} HCP and 6-card diamond suit"
    },
    {
      "id": "rule_of_20",
      "bid": "1{longest_suit}",
      "priority": 25,
      "description": "Light opening by Rule of 20",
      "conditions": {
        "is_opening": true,
        "hcp": {"min": 10, "max": 11},
        "rule_of_20": true
      },
      "forcing": "none",
      "explanation": "Rule of 20 opening with {hcp} HCP and {longest_suit_length}-card suit"
    },
    {
      "id": "pass_weak",
      "bid": "Pass",
      "priority": 1,
      "description": "Pass with insufficient values",
      "conditions": {
        "is_opening": true,
        "hcp": {"max": 11}
      },
      "forcing": "none",
      "explanation": "Pass with only {hcp} HCP"
    }
  ]
}
